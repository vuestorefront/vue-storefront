{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=10.x"
  },
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "test": "lerna run test",
    "link-core": "yarn crosslink --overwrite",
    "release-patch": "lerna publish patch --skip-npm --force-publish=*",
    "release-stable": "lerna publish minor --skip-npm --force-publish=*"
  },
  "crosslink": [
    "core-repo/node_modules/@vue/composition-api -> node_modules",
    "core-repo/packages/core/* -> node_modules"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@commitlint/cli": "^12.1.1",
    "@loopmode/crosslink": "^0.4.0",
    "@commitlint/config-conventional": "^12.1.1",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "@vue/eslint-config-typescript": "^7.0.0",
    "cross-env": "^6.0.3",
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.6.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lerna": "^3.15.0",
    "lint-staged": "^10.0.7",
    "rimraf": "^3.0.2",
    "rollup": "^1.25.2",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.4.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2",
    "vue-eslint-parser": "^7.0.0",
    "webpack-bundle-analyzer": "^3.5.2"
  },
  "workspaces": {
    "packages": [
      "packages/**/*"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix"
  }
}
