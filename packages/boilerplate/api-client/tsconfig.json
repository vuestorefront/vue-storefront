{
  "extends": "../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "target": "ES2017",
    "module": "ES2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "preserveSymlinks": true,
  }
}
