
.site-name {
  display: none !important;
}

.badge {
  margin-top: 4px;
  background-color: #22c34b;
}

.badge.info {
  background-color: #22c34b !important;
}

.multiselect__tag {
  background: #22c34b !important;
}

.custom-block.tip {
  border-color: #22c34b;
  background-color: #f0f7f2;
}

a code {
  color: $accentColor !important;
  font-weight: bold;
}

.image-shadow {
  display: block;
  margin: 20pt auto;
  box-shadow: 0px 10px 15px 6px rgba(0, 0, 0, 0.30);
}

.preview-view {    
    transition: transform 0.2s ease 1s;
}

.preview-view:hover {
    -webkit-transform: scale(1.5);
    transform: scale(1.5);

}